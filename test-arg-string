  echo
  echo mesg:
  echo $mesg
  
  mesg=\"$mesg\"

  echo
  echo quoted mesg:
  echo $mesg

  echo
  echo you passed: 
  echo $1

  mesg=\"$1\"
  
  echo
  echo quoted pass:
  echo $mesg

  echo

