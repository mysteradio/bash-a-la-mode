#//////////////////////////////////////////////////////////////////////
#!/bin/bash
#//////////////////////////////////////////////////////////////////////
#
# duck — use lynx to open lite.duckduckgo.com/lite
#
# requires: lynx
#
#//////////////////////////////////////////////////////////////////////
# PATH AND NAME FOR FRIENDLY USE
#//////////////////////////////////////////////////////////////////////

_path=$0
_name="${_path##*/}"

#//////////////////////////////////////////////////////////////////////
# FUNCTIONS
#//////////////////////////////////////////////////////////////////////

# nope() { echo NO FUNCTIONS IN THIS SCRIPT }

#//////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#//////////////////////////////////////////////////////////////////////

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly

   lynx -editor=vim -short_url https://lite.duckduckgo.com/lite

fi

#//////////////////////////////////////////////////////////////////////
# END OF duck — 220208.1159
