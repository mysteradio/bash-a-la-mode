#######################################################################
#!/bin/bash
#######################################################################
#
# marco — fetches POLO! lines (+1 after) from home .dudo file.
#         (dudo files are my personal todo compilations)
#
#//////////////////////////////////////////////////////////////////////
# PATH AND NAME FOR FRIENDLY USE
#//////////////////////////////////////////////////////////////////////

_path=$0
_name="${_path##*/}"

#//////////////////////////////////////////////////////////////////////
# FUNCTIONS
#//////////////////////////////////////////////////////////////////////
#----------------------------------------------------------------------
#fxn() { }
#----------------------------------------------------------------------
#//////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#//////////////////////////////////////////////////////////////////////
#----------------------------------------------------------------------

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly
  
  echo
  cat /home/$(whoami)/.dudo | grep -A 1 POLO!
  exit 0

fi


#----------------------------------------------------------------------
#//////////////////////////////////////////////////////////////////////
# END OF marco — 220210.0149
#//////////////////////////////////////////////////////////////////////
