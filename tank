#fxn() {

  # function

#}
#----------------------------------------------------------------------
#//////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#//////////////////////////////////////////////////////////////////////
#----------------------------------------------------------------------

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly

  if [[ $# -eq 0 ]] ; then # mount

    sudo mount /dev/sda4 /media/TANK
    exit 0
  fi 
  
  if [[ "$1" = "out" ]] ; then # unmount

    sudo umount /dev/sda4
    exit 0
  fi
  
  echo >&2
  echo "ahem: tank (out)"
  echo 
  exit 1
fi

