#######################################################################
#!/bin/bash
#######################################################################
#
# paymo — fetches HEED! lines from files in .joueurnull directory.
#         (.joueurnull is my personal journal directory)
#
#//////////////////////////////////////////////////////////////////////
# PATH AND NAME FOR FRIENDLY USE
#//////////////////////////////////////////////////////////////////////

_path=$0
_name="${_path##*/}"

#//////////////////////////////////////////////////////////////////////
# FUNCTIONS
#//////////////////////////////////////////////////////////////////////
#----------------------------------------------------------------------
#fxn() { THIS SCRIPT HAS NO FUNCTIONS}
#----------------------------------------------------------------------
#//////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#//////////////////////////////////////////////////////////////////////

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly
  
  echo
  cat /home/$(whoami)/.joueurnull/* | grep -A 1 HEED!
  echo  
  exit 0

fi

#//////////////////////////////////////////////////////////////////////
# END OF paymo — 220325.1846
#//////////////////////////////////////////////////////////////////////
