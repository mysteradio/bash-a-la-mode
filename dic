# dic -- search TheFreeDictionary.com for a word using ddgr
#
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# PATH AND NAME FOR FRIENDLY USE
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------
_path=$0
_name="${_path##*/}"
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# FUNCTIONS
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------
#fxn() {

  # NO FUNCTIONS

#}
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly

  echo
  echo type q and «enter» to quit
  echo or type a new word and «enter» to search again
  echo

#  ddgr -w www.thefreedictionary.com $1 | head -2 | cut -d'1' -f 2-
  
  ddgr -w www.thefreedictionary.com $1 | head -2 | tail -1
  exit 0

fi

