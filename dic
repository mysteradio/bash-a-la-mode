#///////////////////////////////////////////////////////////////////////
#!/bin/bash
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------
#
# dic -- search TheFreeDictionary.com for a word using ddgr
#
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# PATH AND NAME FOR FRIENDLY USE
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------
_path=$0
_name="${_path##*/}"
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# FUNCTIONS
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------
#fxn() {

  # NO FUNCTIONS

#}
#-----------------------------------------------------------------------
#///////////////////////////////////////////////////////////////////////
# INTERNAL AFFAIRS
#///////////////////////////////////////////////////////////////////////
#-----------------------------------------------------------------------

if [ $BASH_SOURCE = "$_path" ] ; then  # script called directly

  ddgr -w www.thefreedictionary.com $1 | head -2

fi

